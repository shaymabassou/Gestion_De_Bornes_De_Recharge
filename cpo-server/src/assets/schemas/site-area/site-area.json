{
  "$id": "site-area",
  "definitions": {
    "id": {
      "$ref": "common#/definitions/id"
    },
    "name": {
      "type": "string",
      "sanitize": "mongo"
    },
    "address": {
      "$ref": "common#/definitions/address"
    },
    "maximumPower": {
      "type": "number",
      "sanitize": "mongo",
      "minimum": 0,
      "default": 0
    },
    "numberOfPhases": {
      "type": "number",
      "sanitize": "mongo",
      "enum": [1, 3]
    },
    "voltage": {
      "type": "number",
      "sanitize": "mongo",
      "enum": [110, 230, 400]
    },
    "smartCharging": {
      "type": "boolean",
      "sanitize": "mongo"
    },
    "accessControl": {
      "type": "boolean",
      "sanitize": "mongo"
    },
    "siteID": {
      "$ref": "common#/definitions/id"
    },
    "parentSiteAreaID": {
      "type": "string",
      "pattern": "^$|^[0-9a-fA-F]{24}$",
      "sanitize": "mongo",
      "nullable": true
    },
    "tariffID": {
      "$ref": "common#/definitions/tariff-id"
    },
    "tariffIDs": {
      "$ref": "common#/definitions/tariff-ids"
    },
    "image": {
      "type": "string",
      "sanitize": "mongo"
    }
  }
}
